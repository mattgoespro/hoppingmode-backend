{
  "name": "code-portfolio-github-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "webpack-dev-server --mode development --port 3000",
    "start:prod": "webpack-dev-server --mode production --port 3000",
    "build": "rm -rf dist && webpack --mode production",
    "docker:restart-services": "npm run docker:remove-image && npm run docker:build-image && npm run docker:run-image",
    "docker:run-image": "docker run -d -p 8080:3000 --name hoppingmode_github_api hoppingmode/github-api",
    "docker:build-image": "docker build . -t hoppingmode/github-api",
    "docker:remove-image": "docker rm -f hoppingmode_github_api",
    "docker:prune": "docker system prune --force"
  },
  "author": "hoppingmode",
  "dependencies": {
    "axios": "^0.25.0",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-request": "^3.7.0",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "webpack-dev-server": "^4.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "ts-loader": "^9.2.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
